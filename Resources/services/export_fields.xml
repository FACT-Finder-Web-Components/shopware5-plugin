<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="OmikronFactfinder\Components\Data\Article\Fields\CategoryPath">
            <tag name="omikron_factfinder.export_articles_fields" />
        </service>

        <service id="OmikronFactfinder\Components\Data\Article\Fields\Url">
            <argument type="service" id="router" />
            <tag name="omikron_factfinder.export_articles_fields" />
        </service>

        <service id="OmikronFactfinder\Components\Data\Article\Fields\ImageUrl">
            <argument type="service" id="shopware_media.media_service" />
            <argument>%omikron_factfinder.export.thumbnail_size%</argument>
            <tag name="omikron_factfinder.export_articles_fields" />
        </service>

        <service id="OmikronFactfinder\Components\Data\Article\Fields\Attributes" autowire="true">
            <tag name="omikron_factfinder.export_articles_fields" />
        </service>
    </services>
</container>
