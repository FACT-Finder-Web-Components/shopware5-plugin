<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="omikron_factfinder.export.articles.columns" type="collection">
            <parameter key="ProductNumber">ProductNumber</parameter>
            <parameter key="Master">Master</parameter>
            <parameter key="Name">Name</parameter>
            <parameter key="EAN">EAN</parameter>
            <parameter key="Weight">Weight</parameter>
            <parameter key="Description">Description</parameter>
            <parameter key="ImageUrl">ImageUrl</parameter>
            <parameter key="Price">Price</parameter>
            <parameter key="Brand">Brand</parameter>
            <parameter key="Availability">Availability</parameter>
            <parameter key="ShopwareId">ShopwareId</parameter>
            <parameter key="CategoryPath">CategoryPath</parameter>
            <parameter key="Url">Url</parameter>
            <parameter key="Attributes">Attributes</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="omikron_factfinder.models.config" class="OmikronFactfinder\Models\Configuration">
            <argument>%omikron_factfinder.plugin_name%</argument>
            <argument type="service" id="shopware.plugin.cached_config_reader" />
        </service>

        <service id="omikron_factfinder.models.category_filter" class="OmikronFactfinder\Models\CategoryFilter">
            <argument type="service">
                <service class="Shopware\Models\Category\Repository">
                    <factory service="models" method="getRepository" />
                    <argument type="string">Shopware\Models\Category\Category</argument>
                </service>
            </argument>
            <argument type="string">Category</argument>
        </service>

        <service id="omikron_factfinder.subscriber.frontend" class="OmikronFactfinder\Subscriber\TemplateRegistration">
            <argument type="service" id="omikron_factfinder.models.config" />
            <argument type="service" id="template" />
            <argument>%omikron_factfinder.plugin_dir%</argument>
            <tag name="shopware.event_subscriber" />
        </service>

        <service id="omikron_factfinder.subscriber.category" class="OmikronFactfinder\Subscriber\CategoryView">
            <argument type="service" id="omikron_factfinder.models.config" />
            <argument type="service" id="omikron_factfinder.models.category_filter" />
            <tag name="shopware.event_subscriber" />
        </service>

        <service id="OmikronFactfinder\Commands\ExportArticlesCommand">
            <tag name="console.command" command="factfinder:export:articles"/>
        </service>


        <service id="OmikronFactfinder\Components\Data\Article\Articles" autowire="true"/>
        <service id="OmikronFactfinder\Components\Data\Article\ArticleDataProvider" autowire="true"/>
        <service id="OmikronFactfinder\Components\Filter\TextFilter" autowire="true"/>
        <service id="OmikronFactfinder\Components\Formatter\NumberFormatter" autowire="true"/>
        <service id="OmikronFactfinder\Components\Data\Article\Articles" autowire="true"/>

        <service id="OmikronFactfinder\Components\Data\Article\Fields\CategoryPath">
            <tag name="omikron_factfinder.export_articles_fields"/>
        </service>
        <service id="OmikronFactfinder\Components\Data\Article\Fields\Url">
            <argument type="service" id="router"/>
            <argument type="service" id="OmikronFactfinder\Components\Service\ShopEmulationService"/>
            <tag name="omikron_factfinder.export_articles_fields"/>
        </service>

        <service id="OmikronFactfinder\Components\Data\Article\Type\MainArticleFactory" >
            <argument type="service" id="OmikronFactfinder\Components\Data\Article\Type\VariantFactory"/>
            <argument type="service" id="OmikronFactfinder\Components\Formatter\NumberFormatter"/>
            <argument type="tagged" tag="omikron_factfinder.export_articles_fields"/>
        </service>

        <service id="OmikronFactfinder\Components\Data\Article\Type\MainArticle">
            <factory service="OmikronFactfinder\Components\Data\Article\Type\MainArticleFactory" method="create"/>
        </service>

        <service id="OmikronFactfinder\Components\Data\Article\Type\VariantFactory" autowire="true"/>
        <service id="OmikronFactfinder\Components\Data\Article\Type\Variant">
            <factory service="OmikronFactfinder\Components\Data\Article\Type\VariantFactory" method="create"/>
        </service>

        <service id="OmikronFactfinder\Components\Service\ShopEmulationService" shared="true">
            <argument type="service" id="models"/>
            <argument type="service" id="shopware.components.shop_registration_service"/>
            <argument type="service" id="config"/>
        </service>

        <service id="OmikronFactfinder\Components\Service\ExportService" autowire="true">
            <argument type="service" id="OmikronFactfinder\Components\Data\Article\ArticleDataProvider"/>
            <argument type="service" id="OmikronFactfinder\Components\Filter\TextFilter"/>
            <argument>%omikron_factfinder.export.articles.columns%</argument>
        </service>
    </services>
</container>
