<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/export_fields.xml" />
        <import resource="services/parameters.xml" />
        <import resource="services/subscribers.xml" />
    </imports>

    <services>
        <service id="omikron_factfinder.components.config" class="OmikronFactfinder\Components\Configuration">
            <argument>%omikron_factfinder.plugin_name%</argument>
            <argument type="service" id="shopware.plugin.cached_config_reader" />
        </service>

        <service id="omikron_factfinder.components.category_filter" class="OmikronFactfinder\Components\CategoryFilter">
            <argument type="service">
                <service class="Shopware\Models\Category\Repository">
                    <factory service="models" method="getRepository" />
                    <argument type="string">Shopware\Models\Category\Category</argument>
                </service>
            </argument>
            <argument type="string">Category</argument>
        </service>

        <service id="OmikronFactfinder\Commands\ExportArticlesCommand">
            <tag name="console.command" command="factfinder:export:articles" />
        </service>

        <service id="OmikronFactfinder\Components\Data\Article\ArticleDataProvider" autowire="true" />
        <service id="OmikronFactfinder\Components\Data\Article\Articles" autowire="true" />
        <service id="OmikronFactfinder\Components\Filter\TextFilter" />
        <service id="OmikronFactfinder\Components\Formatter\NumberFormatter" />
        <service id="OmikronFactfinder\Components\Output\Csv">
            <argument type="expression">service('omikron_factfinder.components.config').getChannel()</argument>
            <argument>%omikron_factfinder.export.delimiter%</argument>
        </service>

        <service id="OmikronFactfinder\Components\Data\Article\Type\MainArticleFactory">
            <argument type="service" id="OmikronFactfinder\Components\Data\Article\Type\VariantFactory" />
            <argument type="service" id="OmikronFactfinder\Components\Formatter\NumberFormatter" />
            <argument type="service" id="OmikronFactfinder\Components\Filter\TextFilter" />
            <argument type="tagged" tag="omikron_factfinder.export_articles_fields" />
        </service>

        <service id="OmikronFactfinder\Components\Data\Article\Type\MainArticle">
            <factory service="OmikronFactfinder\Components\Data\Article\Type\MainArticleFactory" method="create" />
        </service>

        <service id="OmikronFactfinder\Components\Data\Article\Type\VariantFactory" autowire="true" />
        <service id="OmikronFactfinder\Components\Data\Article\Type\Variant">
            <factory service="OmikronFactfinder\Components\Data\Article\Type\VariantFactory" method="create" />
        </service>

        <service id="OmikronFactfinder\Components\Service\ShopEmulationService">
            <argument type="service">
                <service class="Shopware\Models\Shop\Repository">
                    <factory service="models" method="getRepository" />
                    <argument>Shopware\Models\Shop\Shop</argument>
                </service>
            </argument>
            <argument type="service" id="shopware.components.shop_registration_service" />
            <argument type="service" id="router" />
            <argument type="service" id="config" />
        </service>

        <service id="OmikronFactfinder\Components\Service\ExportService">
            <argument type="service" id="OmikronFactfinder\Components\Data\Article\ArticleDataProvider" />
            <argument type="service" id="OmikronFactfinder\Components\Filter\TextFilter" />
            <argument>%omikron_factfinder.export.articles.columns%</argument>
        </service>
    </services>
</container>
